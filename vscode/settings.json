{
    "terminal.integrated.defaultProfile.osx": "bash",
    "terminal.integrated.enableVisualBell": true,
    "files.insertFinalNewline": true,
    "editor.renderFinalNewline": "dimmed",
    "workbench.startupEditor": "none",
    "github.copilot.enable": {
        "*": true,
        "plaintext": false,
        "markdown": true,
        "scminput": false
    },
    "workbench.editor.enablePreview": false,
    "[shellscript]": {
        "editor.insertSpaces": false
    },
    "github.copilot.nextEditSuggestions.enabled": true,
    "chat.tools.terminal.blockDetectedFileWrites": "outsideWorkspace",
    "chat.agent.maxRequests": 500,
    "accessibility.signals.chatUserActionRequired": {
        "sound": "on"
    },
    "accessibility.signals.chatResponseReceived": {
        "sound": "on"
    },
    "editor.accessibilitySupport": "off",
    "github.copilot.chat.localeOverride": "ja",
    "chat.tools.terminal.autoApprove": {
        "cd": true,
        "cp": true,
        "echo": true,
        "ls": true,
        "pwd": true,
        "cat": true,
        "head": true,
        "tail": true,
        "wc": true,
        "tr": true,
        "cut": true,
        "cmp": true,
        "which": true,
        "basename": true,
        "dirname": true,
        "realpath": true,
        "readlink": true,
        "stat": true,
        "file": true,
        "du": true,
        "df": true,
        "sleep": true,
        "grep": true,
        "git status": true,
        "git log": true,
        "git show": true,
        "git diff": true,
        "git grep": true,
        "git branch": true,
        "git fetch": true,
        "git run view": true,
        "/^git branch\\b.*-(d|D|m|M|-delete|-force)\\b/": false,
        "date": true,
        "/^date\\b.*(-s|--set)\\b/": false,
        "find": true,
        "/^find\\b.*-(delete|exec|execdir|fprint|fprintf|fls|ok|okdir)\\b/": false,
        "sort": true,
        "/^sort\\b.*-(o|S)\\b/": false,
        "tree": true,
        "/^tree\\b.*-o\\b/": false,
        "column": true,
        "/^column\\b.*-c\\s+[0-9]{4,}/": false,
        "rm": false,
        "rmdir": false,
        "dd": false,
        "kill": false,
        "ps": false,
        "top": false,
        "curl": false,
        "wget": false,
        "chmod": false,
        "chown": false,
        "jq": false,
        "xargs": false,
        "eval": false,
        "gh pr view": true,
        "gh pr diff": true,
        "sed": true,
        "touch": true,
        "mkdir": true,
        "mktemp": true,
        "aws": true,
        "terraform plan": true,
        "/terragrunt(\\s+run)?(\\s+--all)?\\s+plan/": true,
        "python": true,
        "python3": true,
        ".venv/bin/python": true,
        "uv": true,
        "make": true,
        "poetry": true,
        "timeout": true,
        "source": true,
        "iconv": true,
        "time": true,
        "tee": true,
        "global": true,
        "gtags": true,
        "pygmentize": true,
        "ctags": true,
        "copilot": true,
        "gemini": true,
        ">\\s*/tmp/": true,
        ">\\s*/dev/null": true
    },
    "remote.autoForwardPortsSource": "hybrid",
    "aws.telemetry": false,
    "github.copilot.chat.anthropic.tools.websearch.userLocation": {},
    "aws.cloudformation.telemetry.enabled": false,
    "scm.repositories.selectionMode": "single",
    "chat.tools.urls.autoApprove": {
        "https://*.github.com": true,
        "https://*.google.com": true,
        "https://containers.dev": true,
        "https://*.github.io": true,
        "https://www.bing.com": true,
        "https://*.githubusercontent.com": true,
        "https://terragrunt.gruntwork.io": true,
        "https://*.google.dev": true,
        "https://github.blog": true,
        "https://*.gnu.org": true,
        "https://stackoverflow.com": {
            "approveRequest": true,
            "approveResponse": false
        },
        "https://duckduckgo.com": {
            "approveRequest": true,
            "approveResponse": false
        },
        "https://googleapis.dev": true
    }
}
